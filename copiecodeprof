<body>

    <div class="quiz-container">
        <h1>üîç Quizz de Progression</h1>
        <div id="quiz-box">
            <p id="question-text">Question en cours...</p>
            <div id="answer-buttons">
                </div>
            <button id="next-button">Suivant</button>
        </div>
        <div id="result" style="display: none;"></div>
    </div>

    <script>
        // JAVASCRIPT: Logique du Quiz

        // 1. D√©finissez vos questions ici !
        // Chaque objet est une question. La propri√©t√© 'correct' doit correspondre exactement au texte de la bonne r√©ponse.
        const questions = [
            {
                question: "Quelle est la capitale de la France ?",
                answers: [
                    { text: "Londres", correct: false },
                    { text: "Berlin", correct: false },
                    { text: "Paris", correct: true },
                    { text: "Rome", correct: false }
                ]
            },
            {
                question: "Qui a peint La Joconde ?",
                answers: [
                    { text: "Vincent van Gogh", correct: false },
                    { text: "L√©onard de Vinci", correct: true },
                    { text: "Claude Monet", correct: false }
                ]
            },
            {
                question: "Combien de c√¥t√©s a un heptagone ?",
                answers: [
                    { text: "6", correct: false },
                    { text: "7", correct: true },
                    { text: "8", correct: false }
                ]
            }
        ];
        // Note : Ajoutez autant de questions que n√©cessaire dans ce tableau !

        // Variables de suivi
        let currentQuestionIndex = 0;
        let score = 0;
        let answered = false; // Emp√™che de cliquer plusieurs fois sur les r√©ponses

        const questionTextElement = document.getElementById('question-text');
        const answerButtonsElement = document.getElementById('answer-buttons');
        const nextButton = document.getElementById('next-button');
        const resultElement = document.getElementById('result');
        const quizBox = document.getElementById('quiz-box');

        // Initialisation : Afficher la premi√®re question
        function startQuiz() {
            currentQuestionIndex = 0;
            score = 0;
            nextButton.textContent = "Suivant";
            nextButton.style.display = 'none';
            resultElement.style.display = 'none';
            quizBox.style.display = 'block';
            showQuestion();
        }

        // Afficher la question courante et ses boutons
        function showQuestion() {
            resetState();
            let currentQuestion = questions[currentQuestionIndex];
            let questionNo = currentQuestionIndex + 1;
            questionTextElement.textContent = `${questionNo}. ${currentQuestion.question}`;

            currentQuestion.answers.forEach(answer => {
                const button = document.createElement('button');
                button.textContent = answer.text;
                button.classList.add('answer-btn');
                answerButtonsElement.appendChild(button);
                
                // Stocker si la r√©ponse est correcte directement sur le bouton
                if (answer.correct) {
                    button.dataset.correct = "true";
                }
                button.addEventListener('click', selectAnswer);
            });
        }

        // Nettoyer les boutons et l'√©tat
        function resetState() {
            answered = false;
            nextButton.style.display = 'none';
            while (answerButtonsElement.firstChild) {
                answerButtonsElement.removeChild(answerButtonsElement.firstChild);
            }
        }

        // G√©rer le clic sur une r√©ponse
        function selectAnswer(e) {
            if (answered) return; // Ne rien faire si la question a d√©j√† √©t√© r√©pondue

            answered = true;
            const selectedBtn = e.target;
            const isCorrect = selectedBtn.dataset.correct === "true";

            // Marquer le bouton s√©lectionn√© comme correct ou incorrect
            if (isCorrect) {
                selectedBtn.classList.add('correct');
                score++;
                // L'avancement du personnage pourrait se faire ici !
                // Par exemple : console.log("Le personnage avance d'un pas !");
            } else {
                selectedBtn.classList.add('incorrect');
            }
            
            // R√©v√©ler la bonne r√©ponse m√™me si le joueur s'est tromp√©
            Array.from(answerButtonsElement.children).forEach(button => {
                if (button.dataset.correct === "true") {
                    button.classList.add('correct');
                }
                button.removeEventListener('click', selectAnswer); // D√©sactiver tous les boutons
            });

            nextButton.style.display = 'block';
        }

        // G√©rer le clic sur le bouton "Suivant"
        function handleNextButton() {
            currentQuestionIndex++;
            if (currentQuestionIndex < questions.length) {
                showQuestion();
            } else {
                showResult();
            }
        }

        // Afficher le r√©sultat final
        function showResult() {
            quizBox.style.display = 'none';
            resultElement.style.display = 'block';
            resultElement.innerHTML = `Bravo ! Vous avez termin√© le quizz.<br>Votre score final est de ${score} sur ${questions.length}.`;
            
            // Bouton pour rejouer
            const restartButton = document.createElement('button');
            restartButton.textContent = "Rejouer";
            restartButton.id = "next-button"; // R√©utiliser l'ID pour le style
            restartButton.style.marginTop = "30px";
            restartButton.addEventListener('click', startQuiz);
            resultElement.appendChild(restartButton);
        }

        nextButton.addEventListener('click', () => {
            if (currentQuestionIndex < questions.length) {
                handleNextButton();
            } else {
                startQuiz();
            }
        });

        startQuiz(); // Lancement du quiz au chargement de la page
    </script>

</body>
</html>
